<% if @information_request %>
  <h1 class="text-3xl font-bold mb-6"><%= @information_request.title %></h1>
  <p class="text-gray-300 mb-4"><%= @information_request.description %></p>

  <%= form_with url: public_request_submit_path(@information_request.token), method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :content, "Your Response", class: "block text-gray-200 font-bold" %>
      <%= f.text_area :content, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600", rows: 6 %>
    </div>

    <%= f.submit "Submit", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
<% end %>
