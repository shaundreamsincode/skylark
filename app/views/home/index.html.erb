<div class="h-56 grid grid-cols-1 gap-4 space-evenly">
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-5xl font-extrabold mb-4">The Cube</h1>
    </div>

    <div>
      <% if current_user %>
        <%= link_to "Dashboard", "/dashboard", class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
      <% else %>
        <%= link_to "Login", "/login", class: "font-medium hover:underline" %>
      <% end %>
    </div>
  </div>
  <div>
    <p class="text-xl mb-6">Roma Norte, CDMX</p>
  </div>

  <div class="container mx-auto px-4 py-8">
    <%= image_tag "logo_cubo.png",
                  alt: "The Cube",
                  class: "mx-auto max-w-full" %>
  </div>

  <div class="mb-4 md:mb-8">
    <%= link_to "Request access", new_inquiry_path, class: "font-medium hover:underline" %>
  </div>
</div>
