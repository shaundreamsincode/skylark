<h1 class="text-3xl font-bold mb-6">Explore Projects</h1>

<!-- Search Section -->
<div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-8">
  <h2 class="text-2xl font-bold text-blue-400 mb-4">Find Projects</h2>

  <%= form_with url: explore_index_path, method: :get, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :search, "Search by Title", class: "block text-gray-200 font-bold" %>
      <%= f.text_field :search, value: params[:search], placeholder: "Enter project title...", class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
    </div>

    <div class="mb-4">
      <%= f.label :tag, "Filter by Tag", class: "block text-gray-200 font-bold" %>
      <%= f.collection_select :tag, @tags, :name, :name, include_blank: "Select a Tag", class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
    </div>

    <%= f.submit "Search", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
  <% end %>
</div>

<!-- Categories Section -->
<div class="bg-gray-800 p-6 rounded-lg shadow-lg">
  <h2 class="text-2xl font-bold text-blue-400 mb-4">Browse by Category</h2>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <% @categories.each do |category| %>
      <%= link_to category.name, explore_index_path(category: category), class: "block bg-gray-700 hover:bg-gray-600 text-white font-bold py-4 px-6 rounded-lg text-center" %>
    <% end %>
  </div>
</div>

<!-- Project List -->
<div class="mt-8">
  <h2 class="text-2xl font-bold text-blue-400 mb-4">Projects</h2>
  <% if @projects.present? %>
    <ul class="divide-y divide-gray-600">
      <% @projects.each do |project| %>
        <li class="py-4">
          <h3 class="text-xl font-bold text-blue-400">
            <%= link_to project.title, project_path(project), class: "hover:underline" %>
          </h3>
          <p class="text-gray-400"><%= project.summary %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 italic">No projects found.</p>
  <% end %>
</div>
