<div class="flex justify-center items-center h-screen">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Log In</h2>

    <%= form_tag(sessions_path, class: "space-y-4") do %>
      <!-- Email Field -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <%= text_field_tag :email, nil, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Password Field -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
        <%= password_field_tag :password, nil, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <!-- Submit Button -->
      <div>
        <%= submit_tag "Log in", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition" %>
      </div>
    <% end %>

    <!-- Additional Links -->
    <div class="text-center mt-4">
      <!-- <a href="#" class="text-blue-600 hover:underline text-sm">Forgot your password?</a> -->
    </div>
  </div>
</div>
