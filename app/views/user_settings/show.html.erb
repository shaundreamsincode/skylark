<h1 class="text-3xl font-bold mb-6">User Settings</h1>

<%= form_with model: @user, url: user_settings_path, method: :patch, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :first_name, "First Name", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :first_name, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <div class="mb-4">
    <%= f.label :last_name, "Last Name", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :last_name, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <div class="mb-4">
    <%= f.label :email, "Email", class: "block text-gray-200 font-bold" %>
    <%= f.email_field :email, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, "New Password", class: "block text-gray-200 font-bold" %>
    <%= f.password_field :password, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, "Confirm New Password", class: "block text-gray-200 font-bold" %>
    <%= f.password_field :password_confirmation, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <%= f.submit "Save Settings", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
<% end %>
