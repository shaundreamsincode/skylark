<h2 class="text-3xl font-bold mb-4">My Research Projects</h2>
<%= link_to "Create New Project", new_research_project_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded mb-4" %>
<% @projects.each do |project| %>
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
    <h3 class="text-2xl font-bold text-blue-400"><%= link_to project.title, research_project_path(project) %></h3>
    <p class="text-gray-400"><%= project.summary %></p>
  </div>
<% end %>
