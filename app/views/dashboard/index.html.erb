<h1 class="text-3xl font-bold mb-6">Dashboard</h1>

<!-- Notifications Section -->
<div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
  <h2 class="text-2xl font-bold text-blue-400 mb-4">Notifications</h2>

  <% if @notifications.present? %>
    <ul class="divide-y divide-gray-600">
      <% @notifications.each do |notification| %>
        <li class="py-4 flex justify-between items-center">
          <span class="text-gray-300"><%= notification.message %></span>
          <% unless notification.read %>
            <%= button_to "Mark as Read", mark_as_read_notification_path(notification), method: :patch, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 italic">No new notifications.</p>
  <% end %>
</div>

<!-- Other Dashboard Content -->
<h2 class="text-2xl font-bold text-blue-400 mb-4">Your Projects</h2>
<ul>
  <% @projects.each do |project| %>
    <li class="py-2">
      <%= link_to project.title, project_path(project), class: "text-blue-400 hover:underline" %>
    </li>
  <% end %>
</ul>
