<h2 class="text-3xl font-bold mb-4">My Participation Requests</h2>
<% @participation_requests.each do |request| %>
  <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
    <h3 class="text-2xl font-bold text-blue-400">
      <%= link_to request.research_project.title, research_project_path(request.research_project) %>
    </h3>
    <p class="text-gray-400">Status: <%= request.status.capitalize %></p>
  </div>
<% end %>
