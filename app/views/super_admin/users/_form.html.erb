<h1 class="text-3xl font-bold mb-6"><%= @user.new_record? ? "New User" : "Edit User" %></h1>
<%= form_with model: @user, url: @user.new_record? ? super_admin_users_path : super_admin_user_path(@user), method: @user.new_record? ? :post : :patch do |f| %>
  <div class="mb-4">
    <%= f.label :first_name, "First Name", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :first_name, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>
  <div class="mb-4">
    <%= f.label :last_name, "Last Name", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :last_name, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>
  <div class="mb-4">
    <%= f.label :email, "Email", class: "block text-gray-200 font-bold" %>
    <%= f.email_field :email, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>
  <div class="mb-4">
    <%= f.label :super_admin, "Super Admin", class: "block text-gray-200 font-bold" %>
    <%= f.check_box :super_admin, class: "w-4 h-4 text-blue-500 border-gray-300 rounded" %>
  </div>
  <%= f.submit "Save", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
<% end %>
