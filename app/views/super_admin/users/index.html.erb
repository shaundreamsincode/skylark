<h1 class="text-3xl font-bold mb-6">Users</h1>
<%= link_to "New User", new_super_admin_user_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
<table class="w-full mt-4">
  <thead>
  <tr>
    <th class="p-2 text-left">Name</th>
    <th class="p-2 text-left">Email</th>
    <th class="p-2">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td class="p-2"><%= link_to user.full_name, super_admin_user_path(user) %></td>
      <td class="p-2"><%= user.email %></td>
      <td class="p-2">
        <%= link_to "Edit", edit_super_admin_user_path(user), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
