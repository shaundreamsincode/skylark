<h1 class="text-3xl font-bold mb-6">Organizations</h1>
<%= link_to "New Organization", new_super_admin_organization_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
<table class="w-full mt-4">
  <thead>
  <tr>
    <th class="p-2 text-left">Name</th>
    <th class="p-2">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @organizations.each do |organization| %>
    <tr>
      <td class="p-2"><%= link_to organization.name, super_admin_organization_path(organization) %></td>
      <td class="p-2">
        <%= link_to "Edit", edit_super_admin_organization_path(organization), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
