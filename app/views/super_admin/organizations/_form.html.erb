<h1 class="text-3xl font-bold mb-6"><%= @organization.new_record? ? "New Organization" : "Edit Organization" %></h1>
<%= form_with model: @organization, url: @organization.new_record? ? super_admin_organizations_path : super_admin_organization_path(@organization), method: @organization.new_record? ? :post : :patch do |f| %>
  <div class="mb-4">
    <%= f.label :name, "Organization Name", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :name, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>
  <%= f.submit "Save", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
<% end %>
