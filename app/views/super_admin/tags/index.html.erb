<h1 class="text-3xl font-bold mb-6">Tags</h1>
<%= link_to "New Tag", new_super_admin_tag_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
<table class="w-full mt-4">
  <thead>
  <tr>
    <th class="p-2 text-left">Name</th>
    <th class="p-2">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
    <tr>
      <td class="p-2"><%= link_to tag.name, super_admin_tag_path(tag) %></td>
      <td class="p-2">
        <%= link_to "Edit", edit_super_admin_tag_path(tag), class: "text-blue-500" %> |
        <%= link_to "Delete", super_admin_tag_path(tag), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
