<%= form_with model: @tag, url: @tag.new_record? ? super_admin_tags_path : super_admin_tag_path(@tag), local: true do |f| %>
  <div class="mb-4">
    <%= f.label :name, "Tag Name", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :name, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <%= f.submit "Save", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
<% end %>
