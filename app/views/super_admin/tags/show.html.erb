<div class="max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-white mb-6">Tag: <%= @tag.name %></h1>

  <h2 class="text-2xl font-bold text-blue-400 mb-4">Categories</h2>
  <% if @tag.categories.present? %>
    <div class="flex flex-wrap gap-4 mb-6">
      <% @tag.categories.each do |category| %>
        <%= link_to category_path(category), class: "bg-gray-700 text-white px-4 py-2 rounded text-sm hover:bg-gray-600" do %>
          <%= category.name %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">No categories assigned to this tag.</p>
  <% end %>

  <div class="mt-6">
    <%= link_to "Edit", edit_super_admin_tag_path(@tag), class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to "Back to Tags", super_admin_tags_path, class: "ml-4 text-blue-400 hover:text-blue-600" %>
  </div>
</div>
