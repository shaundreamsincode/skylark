<!-- Collaborators Section -->
<div class="mt-8">
  <h2 class="text-2xl font-bold text-blue-400 mb-4">Collaborators</h2>
  <% if @project.members.present? %>
    <ul class="bg-gray-700 p-4 rounded-lg">
      <% @project.members.each do |collaborator| %>
        <li class="text-gray-300 py-1 border-b border-gray-600 last:border-none">
          <%= collaborator.full_name %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 italic">This project does not have any collaborators yet...</p>
  <% end %>
</div>

<!-- Contributor Notes Section -->
<div class="mt-8">
  <h2 class="text-2xl font-bold text-blue-400 mb-4">Contributor Notes</h2>
  <% if @project.notes.present? %>
    <ul class="space-y-4">
      <% @project.notes.each do |note| %>
        <li class="bg-gray-700 p-4 rounded-lg shadow-md">
          <p class="text-gray-300 mb-2"><%= note.content %></p>
          <p class="text-sm text-gray-500">By <%= note.user.name %> - <%= note.entry_type.capitalize %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-gray-500 italic">This project does not have any notes yet...</p>
  <% end %>
</div>


<h1 class="text-3xl font-bold mb-6">Manage Memberships</h1>
<ul class="bg-gray-800 p-4 rounded-lg shadow-lg">
  <% @membership_requests.each do |request| %>
    <li class="text-gray-300 py-2 border-b border-gray-600 last:border-none flex justify-between items-center">
      <span><%= request.user.full_name %> - <%= request.request_message %></span>
      <div>
        <%#= button_to "Accept", project_membership_path(@project, request), method: :patch, params: { status: "accepted" }, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
        <%#= button_to "Reject", project_membership_path(@project, request), method: :patch, params: { status: "rejected" }, class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </li>
  <% end %>
</ul>

<%= button_to "Edit Project", edit_project_path(@project), method: :get, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
<%= link_to "Delete", project_path(@project), method: :delete,
            class: "bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded",
            onclick: "if(confirm('Are you sure you want to delete this project?')) { this.closest('form').submit(); } return false;" %>
