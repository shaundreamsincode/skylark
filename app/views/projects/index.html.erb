<h1 class="text-4xl font-bold mb-6">My Projects</h1>

<% if @projects.present? %>
  <% @projects.each do |project| %>
    <div class="bg-gray-800 p-6 rounded-lg shadow-lg mb-6">
      <h2 class="text-2xl font-bold text-blue-400">
        <%= link_to project.title, project_path(project) %>
      </h2>
      <p class="text-gray-400"><%= project.summary %></p>
      <p class="text-sm text-gray-500 italic">
        <% if project.user == current_user %>
          (Owner)
        <% else %>
          (Collaborator)
        <% end %>
      </p>
    </div>
  <% end %>
<% else %>
  <p class="text-gray-300">You have no projects yet.</p>
<% end %>

<div class="mt-6">
  <%= link_to "Create New Project", new_project_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
</div>
