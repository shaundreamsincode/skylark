<div class="max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
  <h1 class="text-4xl font-bold text-white mb-4"><%= @project.title %></h1>
  <p class="text-gray-400 text-lg mb-6"><%= @project.summary %></p>
  <p class="text-gray-300 text-base mb-6 border-l-4 border-blue-500 pl-4"><%= @project.description %></p>

  <!-- Project Controls -->
  <div class="mt-6">
    <h2 class="text-2xl font-bold text-blue-400 mb-4">Options</h2>

    <div class="flex space-x-4">
      <% if @project.user == current_user %>
        <%= button_to "Go to Admin Dashboard", project_admin_dashboard_path(@project), method: :get, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
      <% else %>
        <% if @project.project_memberships.where(status: :pending).map(&:user).include?(current_user) %>
          <p class="text-gray-300">Your Request is Pending.</p>
        <% elsif @project.project_memberships.where(status: :rejected).map(&:user).include?(current_user) %>
          <p class="text-gray-300">Your Request has been Rejected.</p>
        <% elsif @project.project_memberships.where(status: :approved).map(&:user).include?(current_user) %>
          <%= button_to "Go to Member Dashboard", project_member_dashboard_path(@project), method: :get, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
        <% else %>
          <%= button_to "Request to Join", project_request_membership_path(project_id: @project.id), method: :get, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
