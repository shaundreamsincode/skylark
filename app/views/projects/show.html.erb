<div class="max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
  <h1 class="text-4xl font-bold text-white mb-4"><%= @project.title %></h1>
  <p class="text-gray-400 text-lg mb-6"><%= @project.summary %></p>
  <p class="text-gray-300 text-base mb-6 border-l-4 border-blue-500 pl-4"><%= @project.description %></p>

  <!-- Members Section -->
  <div class="mt-8 p-6 bg-gray-800 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-blue-400 mb-4">Members</h2>
    <% if @project.members.present? %>
      <ul class="divide-y divide-gray-600">
        <% @project.members.each do |collaborator| %>
          <li class="py-2 text-gray-300 flex justify-between items-center">
            <span><%= collaborator.full_name %></span>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500 italic">This project does not have any collaborators yet...</p>
    <% end %>
  </div>

  <!-- Notes Section -->
  <div class="mt-8">
    <%= link_to "View/Add Notes", project_notes_path(@project), class: "text-blue-400 hover:underline" %>
  </div>

  <!-- Project Controls -->
  <% if @project.user == current_user %>
    <div class="mt-6 flex space-x-4">
      <%= button_to "Go to Admin Dashboard", project_admin_dashboard_index_path(@project), method: :get, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
