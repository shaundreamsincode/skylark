<%= form_with model: [@project, @information_request], local: true do |f| %>
  <div class="mb-4">
    <%= f.label :title, "Request Title", class: "block text-gray-200 font-bold" %>
    <%= f.text_field :title, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <div class="mb-4">
    <%= f.label :description, "Description", class: "block text-gray-200 font-bold" %>
    <%= f.text_area :description, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600", rows: 3 %>
  </div>

  <div class="mb-4">
    <%= f.label :expires_at, "Expiration Date (optional)", class: "block text-gray-200 font-bold" %>
    <%= f.date_field :expires_at, class: "w-full p-2 rounded bg-gray-800 text-white border border-gray-600" %>
  </div>

  <%= f.submit class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
<% end %>
