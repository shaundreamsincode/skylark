<div class="container mx-auto px-4 py-8 max-w-md">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Contact Us</h1>

  <%= form_with model: @inquiry, local: true, class: "space-y-4" do |f| %>
    <!-- Name -->
    <div>
      <%= f.label :name, "Your Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Email -->
    <div>
      <%= f.label :email, "Your Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Subject -->
    <div>
      <%= f.label :subject, "Subject", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :subject, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Message Body -->
    <div>
      <%= f.label :body, "Message", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :body, rows: 6, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= f.submit "Send Inquiry", class: "w-full bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition" %>
    </div>
  <% end %>
</div>
