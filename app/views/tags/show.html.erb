<div class="max-w-4xl mx-auto bg-gray-800 p-6 rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-white mb-6">Tag: <%= @tag.name %></h1>

  <div class="mt-8 p-6 bg-gray-800 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-blue-400 mb-4">Projects</h2>
    <% if @projects.present? %>
      <ul class="divide-y divide-gray-600">
        <% @projects.each do |project| %>
          <li class="py-4">
            <h2 class="text-xl font-bold text-blue-400">
              <%= link_to project.title, project_path(project), class: "hover:underline" %>
            </h2>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500 italic">No projects have been tagged with '<%= @tag.name %>' yet.</p>
    <% end %>
  </div>
</div>
