<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">User Management</h1>

  <!-- Table -->
  <div class="overflow-x-auto">
    <table class="min-w-full border-collapse border border-gray-300 bg-white shadow-lg">
      <thead class="bg-gray-200 text-gray-600 uppercase text-sm">
      <tr>
        <th class="border border-gray-300 px-4 py-2 text-left">First Name</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Last Name</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Email</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr class="text-gray-700">
          <td class="border border-gray-300 px-4 py-2">
            <%= link_to user.first_name, admin_user_path(user), class: "text-blue-600 hover:underline" %>
          </td>
          <td class="border border-gray-300 px-4 py-2">
            <%= user.last_name %>
          </td>
          <td class="border border-gray-300 px-4 py-2">
            <%= user.email %>
          </td>
          <td class="border border-gray-300 px-4 py-2 text-center">
            <%= link_to "View", admin_user_path(user), class: "bg-blue-500 text-white font-semibold py-1 px-3 rounded hover:bg-blue-600 transition" %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

  <!-- Create New User Button -->
  <div class="mt-6 text-right">
    <%= link_to "Create New User", new_admin_user_path, class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition" %>
  </div>
</div>
