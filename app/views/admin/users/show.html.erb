<div class="container mx-auto px-4 py-8 max-w-md">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">User Details</h1>
  <p><strong>First Name:</strong> <%= @user.first_name %></p>
  <p><strong>Last Name:</strong> <%= @user.last_name %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>

  <div class="mt-6">
    <%= link_to "Edit User", edit_admin_user_path(@user), class: "bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 transition" %>
  </div>
</div>
