<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6 text-gray-800">Page Views</h1>

  <div class="overflow-x-auto">
    <table class="min-w-full border-collapse border border-gray-300 bg-white shadow-lg">
      <thead class="bg-gray-200 text-gray-600 uppercase text-sm">
      <tr>
        <th class="border border-gray-300 px-4 py-2 text-left">Page</th>
        <th class="border border-gray-300 px-4 py-2 text-left">User</th>
        <th class="border border-gray-300 px-4 py-2 text-left">IP Address</th>
        <th class="border border-gray-300 px-4 py-2 text-left">Date</th>
      </tr>
      </thead>
      <tbody>
      <% @page_views.each do |page_view| %>
        <tr class="text-gray-700">
          <td class="border border-gray-300 px-4 py-2"><%= page_view.page_name %></td>
          <td class="border border-gray-300 px-4 py-2"><%= page_view.user ? page_view.user.email : "Guest" %></td>
          <td class="border border-gray-300 px-4 py-2"><%= page_view.ip_address %></td>
          <td class="border border-gray-300 px-4 py-2"><%= page_view.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
